//товар - 1, 21, 31, 41, 51 ... и т. д.
//товари - 2, 3, 4, 22, 23, 24, 32 ... и т.д
//товарів - 0, 5, 6, 7, 8, 9, 10-20 ... и т. д.

function words(number){
  let array = "товар"
  if(number == 1){
    number1 = number + array;
    return number1;
  }
  if(number ){
    number2 = number + array+'и';
    return number2;
  }
 // else {
   // number + array+'ів';
   // }
}
console.log(words(21));